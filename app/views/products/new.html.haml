.container
  .nav{aria: {label: "breadcrumb"}}
    %ol.breadcrumb.bg-transparent
      %li.breadcrumb-item
        = link_to root_path do
          %i.fas.fa-home
      %li.breadcrumb-item.active{aria: {current: "page"}}
        本を探す

.container
  .row.justify-content-center
    = form_with url: new_product_path, method: :get, local: true, class: "form-inline" do |f|
      .form-group
        .col
          = f.text_field :key_word, class: "form-control form-control-lg", placeholder: "書籍名"
      .form-group
        .col
          = f.submit "検索", class: "btn btn-success btn-md"

  -if @books.present?
    .row
      - @books["items"].each do |book|
        -if book["volumeInfo"]["imageLinks"].present?
          .offset-xs-2.col-xs-8.col-sm-6.col-md-4.col-lg-3
            .card.mt-3.bg-light
              .card-image.mx-auto.my-2
                = image_tag(book["volumeInfo"]["imageLinks"]["smallThumbnail"].insert(4, "s"), class: "rounded border", size:"180x250")
              .card-body.bg-white.border-top
                %h5.card-title.text-truncate= book["volumeInfo"]["title"]
                -if book["volumeInfo"]["authors"].present?
                  %p.card-text.text-truncate= book["volumeInfo"]["authors"].join("/")
                -else
                  作者情報なし
              .card-footer.bg-white.text-center
                = link_to product_registration_products_path(title: book["volumeInfo"]["title"], image_url: book["volumeInfo"]["imageLinks"]["smallThumbnail"], author: book["volumeInfo"]["authors"], description: book["volumeInfo"]["description"], publisher: book["volumeInfo"]["publisher"], release_date: book["volumeInfo"]["publishedDate"]), class: "btn btn-outline-success" do
                  詳細を見る