.container
  .nav{aria: {label: "breadcrumb"}}
    %ol.breadcrumb.bg-transparent
      %li.breadcrumb-item
        = link_to root_path do
          %i.fas.fa-home
      %li.breadcrumb-item.active{aria: {current: "page"}}
        口コミを探す

  .row.justify-content-center
    = search_form_for @q, url: search_posts_path, class: "form-inline" do |f|
      .form-group
        .col
          = f.search_field :title_or_content_or_product_title_cont, class: "form-control form-control-lg", placeholder: "内容、書籍名"
      .form-group
        .col
          = f.submit "検索", class: "btn btn-success btn-md"

  = render "post_list", posts: @posts
  = paginate @posts
  = render "layouts/footer"